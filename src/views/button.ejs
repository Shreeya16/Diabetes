<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="login-page.css">
  <script defer src="login-page.js"></script>
  <style>
    /* Style for the pop-up login form */
    #login-popup {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: white;
      padding: 20px;
      border: 1px solid #ccc;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>

<body>
  <main id="main-holder">
    <h1 id="login-header">Login</h1>
    
    <div id="login-error-msg-holder">
      <p id="login-error-msg">Invalid username <span id="error-msg-second-line">and/or password</span></p>
    </div>
    
    <form id="login-form">
      <input type="text" name="username" id="username-field" class="login-form-field" placeholder="Username">
      <input type="password" name="password" id="password-field" class="login-form-field" placeholder="Password">
      <input type="submit" value="Login" id="login-form-submit">
    </form>
  
    <button onclick="toggleLoginForm()">Sign up!</button> <!-- Button to toggle login form -->
    
    <div id="login-popup"> <!-- Login form will appear here -->
      <h2 id="login-popup-header">Sign up!</h2>
      <form id="signup-form">
        <!-- Add input fields for sign up form -->
      </form>
      <!-- Add submit button for sign up form -->
    </div>
  </main>
  
  <script>
    // Function to toggle visibility of login form pop-up
    function toggleLoginForm() {
      var loginPopup = document.getElementById("login-popup");
      if (loginPopup.style.display === "none") {
        loginPopup.style.display = "block";
      } else {
        loginPopup.style.display = "none";
      }
    }
  </script>
</body>

</html>
